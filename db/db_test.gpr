with "../shared";
with "../lib/aunit/v2p_aunit";
with "db";

project DB_Test is

   for Source_Dirs use ("test");
   for Object_Dir use "test";
   for Main use ("db_harness");

   --------------
   -- Compiler --
   --------------

   package Compiler renames Shared.Compiler;

   ------------
   -- Binder --
   ------------

   package Binder renames Shared.Binder;

   ------------
   -- Linker --
   ------------

   package Linker is

      case Shared.OS is
         when "Windows_NT" =>
            null;
         when others =>
            for Default_Switches ("Ada") use ("-lodbc");
      end case;

      case Shared.Build is
         when "Debug" =>
            for Default_Switches ("Ada") use
              Linker'Default_Switches ("Ada") & ("-g");

         when "Profile" =>
            for Default_Switches ("Ada") use
              Linker'Default_Switches ("Ada") & ("-g", "-lgmem");

         when "Release" =>
            null;
      end case;
   end Linker;

end DB_Test;
