@@INCLUDE@@ babel.thtml
@@-- HTTP_URL(/post_form_enter)

  <hr id="step_1" />

  <h1>@_BABEL_ADD_NEW_PHOTO_@</h1>

  <div id="lazy_new_photo">@_LAZY_NEW_PHOTO_@</div>

  <hr id="step_2" />

  @_LAZY_USER_TMP_PHOTO_SELECT_@

  <hr id="step_3" />

  <h1>Informations</h1>

  <form enctype="multipart/form-data" id="basic_post_form" action="#"
        method="POST">
    <fieldset id="new_post">
      @@-- Is user in a specific forum

      <p id="lazy_forum_list_select">Sélection du forum : @_LAZY_FORUM_LIST_SELECT_@
      <select name="CATEGORY" id="sel_category"></select>
      <input name="TID" id="TID" type="hidden" value="" />
      </p>
      <p id="title_name_input">
        <label for="title_input">@_BABEL_POST_NAME_@</label>
        <input name="NAME" id="title_input" type="entry" value=""/>
      </p>
      <p>
        <label for="comment_input">@_BABEL_ENTER_COMMENT_@</label>
        <textarea name="COMMENT" rows="3" cols="40" id="comment_input"></textarea>
      </p>
      <div id="post_error"></div>
    </fieldset>
  </form>

  <hr id="step_4" />

  <h1>Métadonnées (optionnel)</h1>
  @_LAZY_METADATA_@
  <p id="new_post_add_metadata" style="display:none">
    <a href="#" id="show_metadata_edition">@_BABEL_EDIT_METADATA_@</a>
  </p>

  <p id="metadata_edition"></p>

  @@--  One form to rule them all

  <form enctype="multipart/form-data" id="post_form" action="#" method="POST">
    <p><input name="ENTER" id="post_form_enter" type="submit"
    value="Envoyer"/></p>
  </form>

  </div>
</div>
@@--
