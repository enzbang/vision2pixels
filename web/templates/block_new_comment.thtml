@@INCLUDE@@ set_babel.thtml
@@--
@@IF@@ @_LOGIN_@ /= "" or @_OPTION_ANONYMOUS_COMMENT_@
<form enctype="multipart/form-data" id="comment_form" action="#" method="post">
  <fieldset>
    @@-- Is user logged
    <div id="comment_login"><p>
        @@IF@@ @_LOGIN_@ = ""
        <label for="anonymous_user">@_BABEL_YOUR_NAME_@</label>
        <input name="ANONYMOUS_USER" id="anonymous_user" type="text"/>
        @@END_IF@@
    </p></div>
    @@-- Is user in a specific forum
    <p>
      <input name="FORUM" id="sel_forum_list"
             type="hidden" value="@_Current_FID_@"/>
      <input name="CATEGORY" id="sel_category"
             type="hidden" value="@_Category_Id_@"/>
      <input name="TID" id="TID" type="hidden" value="@_Current_TID_@" />
      <input name="FID" id="FID" type="hidden" value="@_Current_FID_@" />
    </p>

    @@TABLE@@

    <dl><dt>@_CRITERIA_NAME_@</dt>
    <dd>
    <ul id="votefor@_CRITERIA_ID_@" class="unit-rating" style="width:150px;">
     <li class="current-rating" style="width:@_MULT(30):CRITERIA_CURRENT_RATING_@px;">
     Currently @_CRITERIA_CURRENT_RATING_@/5</li>
     @@TABLE@@
        <li><a href="#" id="rating_@_RATING_@_@_CRITERIA_ID_@"
               class="r@_RATING_@-unit rater" rel="nofollow">@_RATING_@</a></li>
     @@END_TABLE@@

     <script type="text/javascript">
       <!--
           @@SET@@ SET_AJAX_RATE_URL = /rate
           @@SET@@ SET_AJAX_RATE_CRITERIA = criteria
           @@SET@@ SET_AJAX_RATE_VAL = value

           var rule_votefor@_CRITERIA_ID_@ = {
	   '#votefor@_CRITERIA_ID_@ li a' : function(el) {
                 el.onclick = function () {
                    AWS.Ajax.XML.request ("@_SET_AJAX_RATE_URL_@",
                    "@_SET_AJAX_RATE_CRITERIA_@=@_CRITERIA_ID_@&@_SET_AJAX_RATE_VAL_@="
                    + this.innerHTML + "&" + AWS.Ajax.serialize("TID"), "");
                    return (false);
                 }
              }
           };
           Behaviour.register (rule_votefor@_CRITERIA_ID_@);
         -->
     </script>
    </ul>
    </dd>
    </dl>
    @@END_TABLE@@

    <p>
      <label for="comment_input">@_BABEL_ENTER_COMMENT_@</label>
      <textarea name="COMMENT" id="comment_input"></textarea>
    </p>
    <p>
      <input name="ENTER" id="comment_form_enter" type="submit" value="OK"/>
    </p>
    <p id="new_comment_error"></p>
    @@--    <p><input name="FILENAME" type="file"/>
  </fieldset>
</form>
@@ELSE@@
    <p id="noanonymouscomment">@_BABEL_NO_ANONYMOUS_COMMENT_@</p>
@@END_IF@@
@@--
